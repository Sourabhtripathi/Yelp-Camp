<% include ../partials/header %>

<div class="container text-center pull-center">
	<h1>Create a New Campground</h1>
	<form action="/campgrounds" method="POST">
		<div class="form-group">
			<input type="text" name="campground[name]" placeholder="Name" class="form-control">
		</div>
		<div class="form-group">
			<input type="text" name="campground[image]" placeholder="Image URL" class="form-control">
		</div>
		<div class="form-group">
			<textarea name="campground[description]" placeholder="Description" class="form-control"></textarea>
		</div>
		<button class="btn btn-primary form-control">Submit</button>
	</form>
</div>

<% include ../partials/footer %>
