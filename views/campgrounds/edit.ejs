<% include ../partials/header %>

<div class="container text-center pull-center">
	<h1>Edit <%= campground.name %></h1>
	<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label>
				Name:
				<input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control">
			</label>
		</div>
		<div class="form-group">
			<label>
				Image Url :
				<input type="text" name="campground[image]" value="<%= campground.image %>" class="form-control">
			</label>
		</div>
		<div class="form-group">
			<label>
				Description : 
				<textarea name="campground[description]" class="form-control"><%= campground.description %></textarea>
			</label>
		</div>
		<button class="btn btn-primary form-control">Submit</button>
	</form>
</div>

<% include ../partials/footer %>
