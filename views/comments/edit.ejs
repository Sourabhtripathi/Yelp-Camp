<% include ../partials/header %>

<div class="container text-center pull-center">
	<h1>Edit your comment</h1>
	<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label>
				Comment:
				<input type="text" name="comment[content]" value="<%= comment.content %>" class="form-control">
			</label>
		</div>
		<button class="btn btn-primary form-control">Submit</button>
	</form>
</div>

